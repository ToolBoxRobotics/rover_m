<launch>
  <include file="$(find rplidar_ros)/launch/rplidar.launch" />
  
  <include file="$(find freenect_launch)/launch/freenect.launch">
    <arg name="depth_registration" value="true"/>
  </include>

  <node pkg="tf" type="static_transform_publisher" name="base_to_laser" args="0.1 0 0.2 0 0 0 base_link laser 100" />
  <node pkg="tf" type="static_transform_publisher" name="base_to_camera" args="0.2 0 0.3 0 0 0 base_link camera_link 100" />

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_update_interval" value="2.0"/>
    <param name="maxUrange" value="6.0"/>
    <param name="linearUpdate" value="0.1"/>
    <param name="angularUpdate" value="0.1"/>
  </node>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find rover_nav_pkg)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rover_nav_pkg)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rover_nav_pkg)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find rover_nav_pkg)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find rover_nav_pkg)/config/base_local_planner_params.yaml" command="load" />
  </node>
  
  <node pkg="rosserial_python" type="serial_node.py" name="base_arduino_node">
    <param name="port" value="/dev/ttyUSB0"/>
  </node>

</launch>
